# Server
PORT=5000
NODE_ENV=development
CORS_ORIGIN=http://localhost:5173
FRONTEND_URL=http://localhost:5173

# Security
ALLOWED_HOSTS=localhost,192.168.1.10  # Liste des hôtes autorisés, séparés par des virgules
LISTEN_INTERFACE=0.0.0.0  # Interface d'écoute (0.0.0.0 pour toutes les interfaces, localhost pour local uniquement)
TRUSTED_PROXIES=127.0.0.1,::1  # Liste des proxies de confiance
ALLOWED_ORIGINS=http://localhost:5173,http://192.168.1.10:5173  # CORS origins autorisés

# MongoDB
MONGODB_URI=mongodb://admin:password@localhost:27017/news_aggregator?authSource=admin

# Authentication
JWT_SECRET=news-aggregator-secret-dev-key

# Application limits
MAX_USER_SOURCES=10
ARTICLE_RETENTION_DAYS=7
MAX_ARTICLES_PER_PAGE=20

# Email (utilisation d'un service de test en dev)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=dev_smtp_user
SMTP_PASSWORD=dev_smtp_password
EMAIL_FROM=dev@mediascan.fr

# External Services
FORMSPREE_API_KEY=dev_formspree_key 